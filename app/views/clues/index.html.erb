<p id="notice"><%= notice %></p>

<h1>Clues</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Category</th>
      <th>Player</th>
      <th>Game</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clues.each do |clue| %>
      <tr>
        <td><%= clue.body %></td>
        <td><%= clue.category %></td>
        <td><%= clue.player_id %></td>
        <td><%= clue.game_id %></td>
        <td><%= link_to 'Show', clue %></td>
        <td><%= link_to 'Edit', edit_clue_path(clue) %></td>
        <td><%= link_to 'Destroy', clue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Clue', new_clue_path %>
